.side-bar
  -# ヘッダー
  .side-bar__user-name
    .top-items
      .top-items__name
        = current_user.nickname
      .top-items_btn
        = link_to new_group_path do
          = icon('far', 'edit', class: "top-items__btn--edit")
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: "top-items__btn--cog")
  -# グループリスト
  .side-bar__group-list
    - @groups.each do |group|
      = render partial: "group", locals: {group: group}
